<%- include('partials/head') -%>
<%- include('partials/nav') -%>
<main>
    <h3 class="mt-3 search">Search Results for "<%= searchQuery %>"</h3>
    <% movies.forEach(movie => { %>
        <div class="card mb-3" style="max-width: 800px; margin: 0 auto">
            <div class="d-flex">
              <div>
                <% if(movie.poster_path == null) {%>
                  <a href="/movies/<%= movie.id%>">
                    <img src="/imgs/missing-img.jpg" class="img-fluid rounded-start" alt="movie poster" style = "min-width: 94px; width: 94px;height: 141px;">
                  </a>
              
                <% } else {%>
                  <a href="/movies/<%= movie.id%>">
                    <img src="<%= base_url + movie.poster_path %>" class="img-fluid rounded-start" alt="movie poster" style = "min-width: 94px; width: 94px;height: 141px;">
                  </a>                
                <% }%>
              </div>
              <div class="card-body">
                <h4 class="card-title"><%= movie.title %>
                    <span>(<%= movie.release_date.split('-')[0] %>)</span>
                </h4>
                <p class="card-text"><%= movie.overview %></p>   
              </div>
            </div>
        </div>
        
    <% }); %>
</main>

<%- include('partials/footer') -%>

